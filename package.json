{
  "name": "zodiac-framework",
  "private": true,
  "version": "1.0.0",
  "description": "A lightweight web framework with SSR support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "ssr": "tsx src/core/ssr/entry.ts",
    "dev:ssr": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "dev:server": "tsx watch src/core/ssr/server.ts",
    "build:ssr": "npm run build && tsc -p tsconfig.server.json",
    "build": "npx zodiac-compiler-v2 -p tsconfig.json -o dist -e src",
    "serve": "serve dist -p 3000"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "eslint-plugin-oxlint": "^0.15.13",
    "oxlint": "^0.15.13",
    "serve": "^14.2.4",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0",
    "vite": "^6.2.2",
    "vitest": "^1.0.0",
    "zodiac-compiler": "file:./zodiac-compiler"
  },
  "dependencies": {
    "@preline/stepper": "^3.0.0",
    "@tailwindcss/vite": "^4.0.14",
    "express": "^4.21.2",
    "happy-dom": "^12.0.0",
    "jsdom": "^26.0.0",
    "preline": "^3.0.1",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "vanilla-calendar-pro": "^3.0.3",
    "vite-plugin-oxlint": "^1.2.3",
    "zodiac-compiler": "file:zodiac-compiler",
    "zodiac-compiler-v2": "file:zodiac-compiler-v2"
  }
}
